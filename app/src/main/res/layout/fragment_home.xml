<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">

    <!-- Header -->
    <ImageView
        android:id="@+id/logo_simodis"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_simodis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Logo SIMODIS" />

    <!-- Help/Tour Button -->
    <ImageView
        android:id="@+id/btn_help"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp"
        android:src="@drawable/ic_help"
        android:contentDescription="Bantuan"
        app:layout_constraintBottom_toBottomOf="@+id/logo_simodis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo_simodis"
        app:tint="@color/colorPrimary" />

    <ImageView
        android:id="@+id/logo_bps"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="Logo BPS"
        android:src="@drawable/ic_web"
        app:layout_constraintBottom_toBottomOf="@+id/logo_simodis"
        app:layout_constraintStart_toEndOf="@id/logo_simodis"
        app:layout_constraintTop_toTopOf="@+id/logo_simodis" />

    <TextView
        android:id="@+id/tv_sapaan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:text="Halo, Sahabat Data!"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/logo_simodis"
        app:layout_constraintTop_toBottomOf="@+id/logo_simodis" />

    <TextView
        android:id="@+id/tv_sub_sapaan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Kamu mau cari data apa hari ini? ðŸ˜Ž"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_sapaan"
        app:layout_constraintTop_toBottomOf="@+id/tv_sapaan" />

    <!-- Search Bar -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Cari Indikator..."
        android:textColorHint="@color/colorPrimary"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub_sapaan"
        app:layout_constraintStart_toStartOf="@+id/tv_sapaan"
        app:layout_constraintEnd_toEndOf="@+id/btn_help"
        app:endIconDrawable="@drawable/ic_search"
        app:endIconMode="custom"
        app:endIconTint="@color/colorPrimary"
        app:endIconContentDescription="Tombol Cari"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Pill">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:inputType="text"
            android:textColor="@color/colorPrimary"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Color Legend -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/color_legend_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/grey_light"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/search_input_layout"
        app:layout_constraintStart_toStartOf="@+id/search_input_layout"
        app:layout_constraintEnd_toEndOf="@+id/search_input_layout">

        <LinearLayout
            android:id="@+id/color_legend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="#00FF5E"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pertanian"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="#FFAE00"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ekonomi"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/circle"
                    android:backgroundTint="#00C8FF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kependudukan"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- RecyclerView untuk menampilkan grid kartu -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_indikator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/color_legend_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_indikator_card" />

    <!-- Tambahkan ProgressBar untuk indikator loading -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>