<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.informasi.InformasiFragment">

    <!-- Header Aplikasi -->
    <ImageView
        android:id="@+id/header_logo"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/logo_simodis"
        android:contentDescription="Logo SIMODIS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Sistem Monitoring Data dan Indikator Strategis Kabupaten Lampung Tengah"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_logo" />

    <View
        android:id="@+id/divider"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_subtitle" />

    <!-- Daftar Layanan dalam ScrollView -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintBottom_toTopOf="@+id/footer_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <!-- Item Layanan 0: Website -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_web"
                style="@style/InfoCardStyle"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="2dp"
                app:strokeColor="@color/grey_light">

                <LinearLayout style="@style/InfoCardLinearLayout">
                    <com.google.android.material.imageview.ShapeableImageView
                        style="@style/InfoCardIcon"
                        android:src="@drawable/ic_web"
                        app:shapeAppearanceOverlay="@style/RoundedImageView"
                        android:contentDescription="Ikon WEB"/>
                    <LinearLayout style="@style/InfoCardTextLayout">
                        <TextView
                            style="@style/InfoCardTitle"
                            android:text="WEBSITE" />
                        <TextView
                            style="@style/InfoCardDescription"
                            android:textColor="@color/black"
                            android:text="Portal data dan informasi dari Badan Pusat Statistik Kabupaten Lampung Tengah" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item Layanan 1: ADISTI -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_adisti"
                style="@style/InfoCardStyle"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="2dp"
                app:strokeColor="@color/grey_light">

                <LinearLayout style="@style/InfoCardLinearLayout">
                    <com.google.android.material.imageview.ShapeableImageView
                        style="@style/InfoCardIcon"
                        android:src="@drawable/ic_wa"
                        app:shapeAppearanceOverlay="@style/RoundedImageView"
                        android:contentDescription="Ikon ADISTI"/>
                    <LinearLayout style="@style/InfoCardTextLayout">
                        <TextView
                            style="@style/InfoCardTitle"
                            android:text="ADISTI" />
                        <TextView
                            style="@style/InfoCardDescription"
                            android:textColor="@color/black"
                            android:text="Hubungi kami melalui ADISTI jika ditemukan kendala atau ada pertanyaan mengenai layanan kami" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item Layanan 2: ROMANTIK -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_romantik"
                style="@style/InfoCardStyle"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="2dp"
                app:strokeColor="@color/grey_light">

                <LinearLayout style="@style/InfoCardLinearLayout">
                    <com.google.android.material.imageview.ShapeableImageView
                        style="@style/InfoCardIcon"
                        android:src="@drawable/ic_romantik"
                        app:shapeAppearanceOverlay="@style/RoundedImageView"
                        android:contentDescription="Ikon ROMANTIK"/>
                    <LinearLayout style="@style/InfoCardTextLayout">
                        <TextView
                            style="@style/InfoCardTitle"
                            android:text="ROMANTIK" />
                        <TextView
                            style="@style/InfoCardDescription"
                            android:textColor="@color/black"
                            android:text="Pemberitahuan rancangan kegiatan statistik yang berupa survei dan kompilasi produk administrasi (kompromin) dari instansi pemerintah ke BPS" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item Layanan 3: PERPUSTAKAAN -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_pst"
                style="@style/InfoCardStyle"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="2dp"
                app:strokeColor="@color/grey_light">

                <LinearLayout style="@style/InfoCardLinearLayout">
                    <com.google.android.material.imageview.ShapeableImageView
                        style="@style/InfoCardIcon"
                        android:src="@drawable/ic_pst"
                        app:shapeAppearanceOverlay="@style/RoundedImageView"
                        android:contentDescription="Ikon PST"/>
                    <LinearLayout style="@style/InfoCardTextLayout">
                        <TextView
                            style="@style/InfoCardTitle"
                            android:text="PERPUSTAKAAN" />
                        <TextView
                            style="@style/InfoCardDescription"
                            android:textColor="@color/black"
                            android:text="Kumpulan publikasi dari BPS di seluruh Indonesia" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item Layanan 4: SILASTIK -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_silastik"
                style="@style/InfoCardStyle"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="2dp"
                app:strokeColor="@color/grey_light">

                <LinearLayout style="@style/InfoCardLinearLayout">
                    <com.google.android.material.imageview.ShapeableImageView
                        style="@style/InfoCardIcon"
                        android:src="@drawable/ic_silastik"
                        app:shapeAppearanceOverlay="@style/RoundedImageView"
                        android:contentDescription="Ikon Silastik"/>
                    <LinearLayout style="@style/InfoCardTextLayout">
                        <TextView
                            style="@style/InfoCardTitle"
                            android:text="SILASTIK" />
                        <TextView
                            style="@style/InfoCardDescription"
                            android:textColor="@color/black"
                            android:text="Melayani transaksi pembelian dan konsultasi data di lingkungan BPS" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item Layanan 5: PPID -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_ppid"
                style="@style/InfoCardStyle"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="2dp"
                app:strokeColor="@color/grey_light">

                <LinearLayout style="@style/InfoCardLinearLayout">
                    <com.google.android.material.imageview.ShapeableImageView
                        style="@style/InfoCardIcon"
                        android:src="@drawable/ic_ppid"
                        app:shapeAppearanceOverlay="@style/RoundedImageView"
                        android:contentDescription="Ikon PPID"/>
                    <LinearLayout style="@style/InfoCardTextLayout">
                        <TextView
                            style="@style/InfoCardTitle"
                            android:text="PPID" />
                        <TextView
                            style="@style/InfoCardDescription"
                            android:textColor="@color/black"
                            android:text="Portal informasi kelembagaan Badan Pusat Statistik" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <ImageView
        android:id="@+id/footer_logo"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/logo_bpslamteng_biru"
        android:contentDescription="Logo BPS Footer"
        app:layout_constraintBottom_toTopOf="@+id/footer_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="© BPS Kabupaten Lampung Tengah 2025"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
